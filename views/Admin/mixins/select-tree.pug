mixin select-tree(items,parent_id,level=1)
  each item in items
    - const prefix = Array(level + 1).join("--")
    option(value=item.id selected=item.id==parent_id) #{prefix}#{item.title} #{item.id==parent_id?"(Danh mục hiện tại)":""}
      if item.children && item.children.length > 0
        +select-tree(item.children,parent_id,level + 1) 